<div class="game-board shadow-2 radius-20">
  <div class="grid">
    {Array(9).fill(null).map((_, index) => (
      <button class="cell" data-index={index} aria-label={`Cell ${index + 1}`}>
        <span class="cell-content"></span>
      </button>
    ))}
  </div>
</div>

<style>
.game-board {
  margin: 24px;
  padding: 16px;
  background: var(--color-ffffff);
}

.grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 8px;
  aspect-ratio: 1;
}

.cell {
  background: var(--color-f3f4f6);
  border: none;
  border-radius: var(--radius-20);
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 2em;
  font-weight: bold;
  color: var(--color-3c2f2f);
  transition: all 0.2s ease;
}

.cell:hover {
  background: var(--color-f5f5f5);
}

.cell-content {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}
</style>

<script>
  let currentPlayer = 'X';
  const board = Array(9).fill(null);

  function checkWinner(board) {
    const lines = [
      [0, 1, 2], [3, 4, 5], [6, 7, 8], // rows
      [0, 3, 6], [1, 4, 7], [2, 5, 8], // columns
      [0, 4, 8], [2, 4, 6] // diagonals
    ];

    for (const [a, b, c] of lines) {
      if (board[a] && board[a] === board[b] && board[a] === board[c]) {
        return board[a];
      }
    }

    return null;
  }

  function handleMove(index) {
    if (board[index] || checkWinner(board)) return;

    board[index] = currentPlayer;
    const cell = document.querySelector(`[data-index="${index}"] .cell-content`);
    if (cell) {
      cell.textContent = currentPlayer;
    }

    const winner = checkWinner(board);
    if (winner) {
      setTimeout(() => {
        alert(`Player ${winner} wins!`);
        resetGame();
      }, 100);
    } else if (!board.includes(null)) {
      setTimeout(() => {
        alert("It's a draw!");
        resetGame();
      }, 100);
    } else {
      currentPlayer = currentPlayer === 'X' ? 'O' : 'X';
    }
  }

  function resetGame() {
    board.fill(null);
    currentPlayer = 'X';
    document.querySelectorAll('.cell-content').forEach(cell => {
      cell.textContent = '';
    });
  }

  // Initialize the game
  function initGame() {
    document.querySelectorAll('.cell').forEach((cell, index) => {
      cell.addEventListener('click', () => handleMove(index));
    });
  }

  // Initialize when DOM is loaded
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initGame);
  } else {
    initGame();
  }
</script>
